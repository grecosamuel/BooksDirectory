html
    head 
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
    body
    if book
        form(action="", method="POST")
            input(type="hidden", name="_METHOD", value="PUT")
            input(type="text", name="title", value=''+book.titolo)
            input(type="text", name="author", value=''+book.autore)
            input(type="date", name="pubdate", value=''+book.data_pubblicazione)
            input(type="submit", value="Update")
    if msg 
        p #{msg}